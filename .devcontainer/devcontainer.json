{
  "name": "Python & Gemini CLI",
  "image": "mcr.microsoft.com/devcontainers/python:3.9",

  // Use "features" to add Node.js, which is needed by the Gemini CLI
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },

  // Forward the Streamlit port
  "forwardPorts": [8501],

  // Chain commands: install python deps AND then install the gemini-cli
  "postCreateCommand": "pip install -r requirements.txt && npm install -g @google/gemini-cli",

  // Customize VS Code with the Python extension
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}